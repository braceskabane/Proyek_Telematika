<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera.any" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <uses-feature android:name="android.hardware.sensor.accelerometer" />
    <uses-feature android:name="android.hardware.sensor.gyroscope" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Hanebado"
        tools:targetApi="31">
        <activity
            android:name=".view.dashboard.reflex.ReflexActivity"
            android:exported="false" />

        <activity
            android:name=".view.dashboard.anticipation.AnticipationActivity"
            android:exported="false" />

        <meta-data
            android:name="androidx.camera.core.impl.CameraXConfig"
            android:value="androidx.camera.camera2.Camera2Config$Impl" />

        <activity
            android:name=".view.dashboard.home.DetailProgressWorkoutActivity"
            android:exported="false" />
        <activity
            android:name=".view.dashboard.history.workout.detail.DatailHistoryWorkoutActivity"
            android:exported="false" />
        <activity
            android:name=".view.dashboard.record.RecordActivity"
            android:exported="false"
            android:theme="@style/AppTheme.Hanebado" />
        <activity
            android:name=".view.dashboard.MainActivity"
            android:exported="false" />
        <activity
            android:name=".view.welcome.WelcomeActivity"
            android:exported="false" />
        <activity
            android:name=".view.register.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".view.login.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".view.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>