<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:minHeight="450dp"
    android:background="@drawable/custom_background_dialog_bottom"
    android:padding="12dp">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="32dp"
                android:src="@drawable/icon_reflex_thunder"/>

            <TextView
                style="@style/textStyleSemIBold_32"
                android:id="@+id/tv_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pembalap F1"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                style="@style/textStyleSemIBold_20"
                android:id="@+id/tv_result_mean"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Less than 100ms"
                android:textAlignment="center"
                android:textColor="@color/reflex" />


            <TextView
                style="@style/textStyleSemIBold_20"
                android:id="@+id/tv_result_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Lightning-fast reflexes, processing information at superhuman speeds"
                android:textAlignment="center"
                android:textColor="@color/dark_grey" />

            <Button
                style="@style/textStyleSemIBold_20"
                android:id="@+id/btn_well_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:backgroundTint="@color/reflex"
                android:text="Save" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>